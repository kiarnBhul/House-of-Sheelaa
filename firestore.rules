rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Global Odoo Configuration - PUBLIC READ, admin-only write
    match /app_settings/{document=**} {
      // Allow unauthenticated reads so the app can boot with config on web
      allow read: if true;
      
      // Allow write if authenticated AND (HofS-admin exists OR user.role == admin)
      allow write: if request.auth != null && (
        exists(/databases/$(database)/documents/HofS-admin/$(request.auth.email)) ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin')
      );
    }
    
    // Admin collection for admin panel authentication
    match /HofS-admin/{email} {
      // Anyone can read for login verification (password checking happens in app logic)
      allow read: if request.auth != null || true; // Allow unauthenticated read for admin login
      // Only existing admins can create new admins
      allow write: if request.auth != null && 
                      get(/databases/$(database)/documents/HofS-admin/$(request.auth.email)).exists;
    }
    
    // Users collection
    match /users/{userId} {
      // Allow read for authenticated users or anyone checking if user exists (for phone login)
      allow read: if true;
      
      // Allow create without auth for initial phone-based registration
      allow create: if true;
      
      // Allow update/write for authenticated users updating their own document
      allow update, write: if request.auth != null && 
                              (userId == request.auth.uid || 
                               request.resource.data.userId == request.auth.uid ||
                               request.resource.data.phone == userId);
      
      // Admin can read/write all user documents
      allow read, write: if request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Users can read their own orders
      allow read: if request.auth != null && 
                    (resource.data.userId == request.auth.uid || 
                     resource.data.phone == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.phone);
      
      // Users can create their own orders
      allow create: if request.auth != null && 
                      (request.resource.data.userId == request.auth.uid ||
                       request.resource.data.phone == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.phone);
      
      // Admin can read/update all orders
      allow read, update: if request.auth != null && 
                             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Bookings collection
    match /bookings/{bookingId} {
      // Users can read their own bookings
      allow read: if request.auth != null && 
                    (resource.data.userId == request.auth.uid ||
                     resource.data.phone == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.phone);
      
      // Users can create their own bookings
      allow create: if request.auth != null && 
                      (request.resource.data.userId == request.auth.uid ||
                       request.resource.data.phone == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.phone);
      
      // Admin can read/update all bookings
      allow read, update: if request.auth != null && 
                             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Reviews collection
    match /reviews/{serviceId} {
      allow read: if true;
      allow write: if true;
      
      match /items/{reviewId} {
        allow read: if true;
        allow create: if true;
        allow delete: if request.auth != null && 
                         exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
                         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
